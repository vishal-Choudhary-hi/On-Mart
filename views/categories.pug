extends profile.pug 
block style
    style 
       include ../static/cart.css
block content
    div#maindiv 
        div#cartdiv
            div#p 
                p=name
            div#tableholder
                if message 
                    p Sorry, No item belongs to this category now
                else
                    each product in products 
                        div.itemcard 
                            div.itemimage
                                img(src="../images/"+product.product_name+".jpeg" alt="Image" onerror='this.src="../images/grocerylogo.png"')
                            div.itemallinfocategories
                                div.iteminfo
                                    p.itemname=product.product_name
                                    p.itemquantity=product.product_quantity
                                    p.itemquantity=product.product_category
                                div.itemprice
                                    p Rs:-
                                    p.sqlprice=product.product_price
                            form.cartform(action="../auth/addtocart",method="POST",target="dummyframe")    
                                button.addtocartbutton(type='submit',name='item_id',value=product.product_id)  Add +
        iframe(name="dummyframe" id="dummyframe" style="display: none")